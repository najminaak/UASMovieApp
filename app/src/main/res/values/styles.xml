<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextExtraBold">
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
    </style>
    <style name="TextBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="TextSemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TextMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TextRegular">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="TextLight">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>

    <!-- font tab layout -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--  text input  -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>